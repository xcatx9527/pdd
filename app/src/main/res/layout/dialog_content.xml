<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_filter"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="15dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="时间"
            android:textSize="16sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:background="@color/gray"
            android:orientation="horizontal"
            android:paddingBottom="5dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="5dp">

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/start_ime"
                    android:layout_width="130dp"
                    android:layout_height="30dp"
                    android:background="@drawable/tv_dialog_bg"
                    android:paddingLeft="20dp"
                    android:gravity="center_vertical"
                    android:hint="开始日期"
                    android:singleLine="true"
                    android:textColor="@color/main_text"
                    android:textColorHint="@color/main_text"
                    android:textSize="15sp" />

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="right"
                    android:padding="3dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/calendar" />
            </FrameLayout>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:gravity="center"
                android:text="至"
                android:textColor="@color/main_text"
                android:textColorHint="@color/gray"
                android:textSize="16sp" />

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/end_time"
                    android:layout_width="130dp"
                    android:layout_height="30dp"
                    android:background="@drawable/tv_dialog_bg"
                    android:gravity="center_vertical"
                    android:paddingLeft="20dp"
                    android:hint="结束日期"
                    android:singleLine="true"
                    android:textColor="@color/main_text"
                    android:textColorHint="@color/main_text"
                    android:textSize="15sp" />

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="right"
                    android:padding="3dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/calendar" />
            </FrameLayout>

        </LinearLayout>

        <RadioGroup
            android:id="@+id/rg_timecontainer"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/rb_yesday"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="昨天" />

            <RadioButton
                android:id="@+id/rb_week"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="近7天" />

            <RadioButton
                android:id="@+id/rb_month"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="近30天" />

            <RadioButton
                android:id="@+id/rb_all"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="全部" />
        </RadioGroup>

        <TextView
            android:id="@+id/tv_terminal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="终端"
            android:textSize="16sp" />

        <LinearLayout
            android:id="@+id/ll_terminal"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">


        </LinearLayout>

        <TextView
            android:id="@+id/tv_cash"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="支付方式"
            android:textSize="16sp" />

        <LinearLayout
            android:id="@+id/ll_cash"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="5dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <com.Allicnce.taobaoAlliance.widget.CheckAbleLinearLayout
                android:id="@+id/cl_rss_l"
                android:layout_width="90dp"
                android:layout_height="30dp"
                android:background="@drawable/checkbg_new"
                android:gravity="center"
                android:tag="0">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerInParent="true"
                    android:layout_margin="5dp"
                    android:gravity="center"
                    android:text="微信"
                    android:textSize="15sp" />
            </com.Allicnce.taobaoAlliance.widget.CheckAbleLinearLayout>

            <com.Allicnce.taobaoAlliance.widget.CheckAbleLinearLayout
                android:id="@+id/cl_rss_r"
                android:layout_width="90dp"
                android:layout_height="30dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/checkbg_new"
                android:gravity="center"
                android:tag="1">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerInParent="true"
                    android:layout_margin="5dp"
                    android:gravity="center"
                    android:text="现金"
                    android:textSize="15sp" />
            </com.Allicnce.taobaoAlliance.widget.CheckAbleLinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/tv_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="票额"
            android:textSize="16sp" />

        <LinearLayout
            android:id="@+id/ll_money"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <com.Allicnce.taobaoAlliance.widget.CheckAbleLinearLayout
                android:id="@+id/cl_five"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:background="@drawable/checkbg_new"
                android:gravity="center"
                android:tag="5">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerInParent="true"
                    android:layout_margin="5dp"
                    android:gravity="center"
                    android:text="5元"
                    android:textSize="15sp" />
            </com.Allicnce.taobaoAlliance.widget.CheckAbleLinearLayout>

            <com.Allicnce.taobaoAlliance.widget.CheckAbleLinearLayout
                android:id="@+id/cl_ten"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:background="@drawable/checkbg_new"
                android:gravity="center"
                android:tag="10">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerInParent="true"
                    android:layout_margin="5dp"
                    android:gravity="center"
                    android:text="10元"
                    android:textSize="15sp" />
            </com.Allicnce.taobaoAlliance.widget.CheckAbleLinearLayout>

            <com.Allicnce.taobaoAlliance.widget.CheckAbleLinearLayout
                android:id="@+id/cl_twenty"
                android:layout_width="1dp"
                android:layout_height="30dp"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:background="@drawable/checkbg_new"
                android:gravity="center"
                android:tag="20">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerInParent="true"
                    android:layout_margin="5dp"
                    android:gravity="center"
                    android:text="20元"
                    android:textSize="15sp" />
            </com.Allicnce.taobaoAlliance.widget.CheckAbleLinearLayout>

            <com.Allicnce.taobaoAlliance.widget.CheckAbleLinearLayout
                android:id="@+id/cl_thidty"
                android:layout_width="1dp"
                android:layout_height="30dp"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:background="@drawable/checkbg_new"
                android:gravity="center"
                android:tag="20">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerInParent="true"
                    android:layout_margin="5dp"
                    android:gravity="center"
                    android:text="30元"
                    android:textSize="15sp" />
            </com.Allicnce.taobaoAlliance.widget.CheckAbleLinearLayout>
        </LinearLayout>


    </LinearLayout>


    <Button
        android:id="@+id/btn_commit"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:background="@drawable/ripple_red"
        android:text="确定"
        android:textColor="@color/white" />


</LinearLayout>

    <uses-permission android:name="android.permission.CALL_PHONE" />
    <uses-permission android:name="android.permission.MOUNT_UNMOUNT_FILESYSTEMS" />

    <application
            android:name=".AppApplication"
            android:icon="@drawable/${app_icon}"
            android:label="${app_name}"
            android:largeHeap="true"
            android:persistent="true"
            android:resizeableActivity="true"
            android:supportsRtl="true"
            android:theme="@style/AppTheme"
            tools:replace="android:label">

        <!-- 欢迎页 -->
        <activity
                android:name="com.Allicnce.taobaoAlliance.activity.SplashActivity"
                android:screenOrientation="portrait"
                android:theme="@style/AppTheme.Launcher">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- 图片预览2 -->
        <activity
                android:name="com.Allicnce.taobaoAlliance.activity.ImagePreviewActivity2"
                android:theme="@style/AppTheme" />
        <!-- 图片预览1 -->
        <activity android:name="com.lzy.imagepicker.ui.ImagePreviewDelActivity" />
        <!-- 主页面 -->
        <!-- 友盟统计 -->
        <meta-data
                android:name="UMENG_APPKEY"
                android:value="57e8e398e0f55ae655000723" />
        <!-- 订单列表主页 -->
        <!-- 关于 -->
        <activity android:name="com.Allicnce.taobaoAlliance.activity.AboutActivity" />

        <!-- 浏览器 -->
        <activity android:name="com.Allicnce.taobaoAlliance.activity.WebActivity" />
        <!-- 订单列表 -->

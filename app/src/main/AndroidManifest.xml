        <activity android:name="com.Allicnce.taobaoAlliance.activity.AddMissionActivity" />

        <meta-data
                android:name="design_width"
                android:value="1080" />
        <meta-data
                android:name="design_height"
                android:value="2160" />


        <activity
                android:name=".common.crash.DefaultErrorActivity"
                android:process=":error_activity" />
        <provider
                android:name=".common.crash.CaocInitProvider"
                android:authorities="${applicationId}.customactivityoncrashinitprovider"
                android:exported="false"
                android:initOrder="101" />
    </application>

</manifest>
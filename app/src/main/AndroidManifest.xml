        <activity
                android:name="com.Allicnce.taobaoAlliance.activity.SettingActivity"
                android:configChanges="orientation|keyboardHidden|screenSize"
                android:screenOrientation="portrait"
                android:windowSoftInputMode="stateAlwaysHidden|adjustPan" />
        <!-- 主页面 -->
        <activity
                android:name="com.Allicnce.taobaoAlliance.activity.MainActivity"
                android:launchMode="singleTop"
                android:theme="@style/AppTheme" />
        <!-- 登陆注册 -->
        <activity
                android:name="com.Allicnce.taobaoAlliance.activity.login.LoginActivity"
                android:launchMode="singleTask"
                android:theme="@style/ColorTranslucentTheme" />
        <!-- 注册第二部 -->
        <activity android:name="com.Allicnce.taobaoAlliance.activity.login.RegisterSecondStepActivity" />
        <!-- 找回密码第一步 -->
        <activity android:name="com.Allicnce.taobaoAlliance.activity.login.RetrievePwdFirstStepActivity" />
        <!-- 找回密码第二部 -->
        <activity android:name="com.Allicnce.taobaoAlliance.activity.login.RetrievePwdSecondStepActivity" />
        <!-- 注册第一步 -->
        <activity android:name="com.Allicnce.taobaoAlliance.activity.login.RegisterFirstStepActivity" />
        <activity
                android:name="com.Allicnce.taobaoAlliance.activity.MoneyTaskDetialsActivity"
                android:screenOrientation="portrait" />
        <activity
                android:name="com.Allicnce.taobaoAlliance.activity.TaskRecordActivity"
                android:screenOrientation="portrait"
                android:theme="@style/AppTheme" />
        <!-- android N 安装app -->
        <provider
                android:name="androidx.core.content.FileProvider"
                android:authorities="${applicationId}.fileProvider"
                android:exported="false"
                android:grantUriPermissions="true">
            <meta-data
                    android:name="android.support.FILE_PROVIDER_PATHS"
                    android:resource="@xml/provider_paths_apk" />
        </provider>

        <!-- 动画demo -->
        <activity android:name="com.Allicnce.taobaoAlliance.animator.interpolator.EvaluatorActivity" />
        <activity android:name="com.Allicnce.taobaoAlliance.animator.interpolator.InterpolatorActivity" />
        <!-- 引导页 -->
        <activity android:name="com.Allicnce.taobaoAlliance.activity.GuideActivity" />
